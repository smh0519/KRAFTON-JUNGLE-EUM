# Server Configuration
PORT=:8080
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s
IDLE_TIMEOUT=120s

# WebSocket Configuration
WS_READ_BUFFER_SIZE=16384
WS_WRITE_BUFFER_SIZE=16384
WS_HANDSHAKE_TIMEOUT=10s
WS_WRITE_TIMEOUT=5s

# Audio Processing
AUDIO_CHANNEL_BUFFER_SIZE=100
AUDIO_MAX_CHANNELS=2

# CORS Settings
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_HEADERS=Origin, Content-Type, Accept

# Database (AWS Aurora PostgreSQL)
DB_HOST=your-aurora-cluster.cluster-xxxx.region.rds.amazonaws.com
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_NAME=your-database-name
DB_SSLMODE=require
DB_TIMEZONE=Asia/Seoul

# AI Server (Python gRPC)
AI_SERVER_ADDR=localhost:50051
AI_ENABLED=false

JWT_SECRET=your-super-secret-key-change-in-production
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
SECURE_COOKIE=false  # 프로덕션에서는 true